            <string>//check if all the units have moved
var moveEnemy = true;

//check if all the player's characters have moved
for(var i = 0; i &lt; global.teamSizes[1]; i++){
    if(global.team[global.playableTeam, i] != 0){
        if(global.team[global.playableTeam, i].canMove){
            moveEnemy = false;
        }
    }
}
var isOccupiedX; //bool if a unit occupies this X coordinate
var isOccupiedY; //bool if a unit occupies this Y coordinate
var nearestX;   //X coordinate of nearest instance
var nearestY;   //Y coordinate of nearest instance
var dirX;       //X direction enemy will take
var dirY;       //Y direction enemy will take
var rangeX;     //X spaces enemy will move
var rangeY;     //Y spaces enemy will move
var coorX;      //new X coordinate
var coorY;      //new Y coordinate
var k;          //index k
//enemy movement AI
if(moveEnemy){
    for(var i = 0; i &lt; global.teamSizes[2]; i++) {
        
        isOccupiedX = false;
        isOccupiedY = false;
        k = 0;
        do {
            k++;
            //get corrdinates of nearest warrioras target
            nearestX = instance_nearest(global.team[2, i].x, global.team[2, i].y, Warrior).x;
            nearestY = instance_nearest(global.team[2, i].x, global.team[2, i].y, Warrior).y;
            //get direction in regards to target
            if(global.team[2, i].x - nearestX &lt; 0)
                dirX = 1;
            else
                dirX = -1;
            if(global.team[2, i].y - nearestY &lt; 0)
                dirY = 1;
            else
                dirY = -1;
            //if x distance from target is &gt;= moveRange
            if(abs((global.team[2, i].x - nearestX)/global.gridSize) &gt;= global.team[2, i].moveRange)
            {
                if(!isOccupiedX)    //if x coordinate is already occupied
                    rangeX = global.team[2, i].moveRange;
                else;
                    rangeY = ceil(random_range(0, 8));
            }
            //if x distance from target is &lt; moveRange
            else
            {
                if(!isOccupiedX)    //if x coordinate is already occupied
                    rangeX = abs((global.team[2, i].x - nearestX)/global.gridSize);
                else 
                    rangeX = ceil(random_range(0, 8));
            }
            //if y distance from the target is &gt;= moveRange
            if(abs((global.team[2, i].y - nearestY)/global.gridSize) &gt;= global.team[2, i].moveRange)
            {
                if(!isOccupiedY)    //if y coordinate is already occupied
                    rangeY = global.team[2, i].moveRange;
                else
                    rangeY = ceil(random_range(0, 8));
            }
            //if y distance from the target is &lt; moveRange
            else
            {
                if(!isOccupiedY)   //if y coordinate is already occupied 
                    rangeY = abs((global.team[2, i].y - nearestY)/global.gridSize);
                else 
                    rangeY = ceil(random_range(0, 8));
            }
            //new coordinates snap to grid (48)
            coorX = (rangeX * global.gridSize);
            coorY = (rangeY * global.gridSize);
            for(var j = 0; j &lt; global.teamSizes[2]; j++) 
            {
                if(((global.team[2, i].x - coorX ==  global.team[2, j].targetX) &amp;&amp;
                    (global.team[2, i].y - coorY == global.team[2, j].targetY)) ||
                    ((global.team[2, i].x - coorX == global.team[1, j].targetX) &amp;&amp;
                    (global.team[2, i].y - coorY == global.team[1, j].targetY)))
                {
                    if((global.team[2, i].x - coorX ==  global.team[2, j].targetX) ||
                        (global.team[2, i].x - coorX == global.team[1, j].targetX))
                    {
                        isOccupiedX = true;
                    }
                    else
                        isOccupiedX = false;
                    if((global.team[2, i].y - coorY == global.team[2, j].targetY) ||
                        (global.team[2, i].y - coorY == global.team[1, j].targetY))
                    {
                        isOccupiedY = true;
                    }
                    else
                        isOccupiedY = false;
                }
                else
                {
                    isOccupiedX = false;
                    isOccupiedY = false;
                }
            }
        } until(!isOccupiedX &amp;&amp; !isOccupiedY);  //loop until not overlapping
        //new coordinate = current position + coor
        global.team[2, i].targetX = global.team[2, i].x + coorX * dirX;
        global.team[2, i].targetY = global.team[2, i].y + coorY * dirY;
    }
    //reset playable team to active
    for(i = 0; i &lt; global.teamSizes[1]; i++){
        global.team[1, i].canMove = true;
        global.team[1, i].sprite_index = global.team[1, i].availableSprite;
    }
}


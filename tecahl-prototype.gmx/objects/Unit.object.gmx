        menuOptions[0] = "Attack";
        menuOptions[1] = "Wait";
        var menu = instance_create(self.targetX, self.targetY, Menu);
        menu.menuOptionsText = menuOptions;
        menu.sourceUnit = self;
        
        //self.canMove = false;
    }
    
    //deselect this unit
    global.selectedUnit = false;
}
